{
  "version": "0.0.0",
  "name": "tsup-preset-solid-monorepo",
  "description": "Preset for building your SolidJS package with tsup.",
  "license": "MIT",
  "author": "Damian Tarnawski <gthetarnav@gmail.com>",
  "contributors": [],
  "private": true,
  "scripts": {
    "postinstall": "pnpm build",
    "test": "pnpm -dir preset run test",
    "build": "pnpm -dir preset run build",
    "format": "prettier --ignore-path .gitignore -w \"preset/**/*.{js,ts,json,css,tsx,jsx}\" \"example/**/*.{js,ts,json,css,tsx,jsx}\"",
    "lint": "eslint --ignore-path .gitignore --max-warnings 0 preset/**/*.{js,ts,tsx,jsx}",
    "typecheck": "pnpm -dir preset run typecheck",
    "update-deps": "pnpm up -Li"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.32.0",
    "prettier": "2.8.3",
    "prettier-plugin-organize-imports": "^3.2.2",
    "typescript": "^4.9.4"
  },
  "packageManager": "pnpm@7.20.0",
  "engines": {
    "node": ">=18"
  }
}
